<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.member">

	<resultMap id="memResult" type="memberVO">
		<result property="id" column="id" />
		<result property="pwd" column="pwd" />
		<result property="name" column="name" />
		<result property="email" column="email" />
		<result property="joinDate" column="joinDate" />
	</resultMap>



	<select id="selectAllMemberList" resultMap="memResult">
	
		<![CDATA[
		
		select * from t_member	order by joinDate desc
		
		]]>

	</select>

	<select id="selectAllMember" resultMap="memResult">
	
		<![CDATA[
		
		select * from t_member	order by joinDate desc
		
		]]>

	</select>

	<insert id="addMember" parameterType="memberVO">
		<![CDATA[
		insert into t_member(id,pwd,name,email)
		values (#{id},#{pwd},#{name},#{email})
		]]>
	</insert>

	<delete id="delMember">
		<![CDATA[delete from t_member where id=#{id}]]>
	</delete>

	<select id="saerchMember" resultMap="memResult">
  <![CDATA[
    SELECT * FROM t_member WHERE name LIKE '%'||#{name}||'%' order by joinDate desc
  ]]>
	</select>

	<select id="saerchMember2" resultMap="memResult">
  <![CDATA[
    SELECT * FROM t_member WHERE name LIKE '%'||#{email}||'%'
  ]]>
	</select>

	<update id="modMember" parameterType="memberVO">
   <![CDATA[
   update t_member set pwd=#{pwd}, name=#{name}, email=#{email}
   where id=#{id}
   ]]>
	</update>


</mapper>